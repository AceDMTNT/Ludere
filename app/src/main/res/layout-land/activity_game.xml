<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_toEndOf="@id/left_container"
        android:layout_toStartOf="@id/right_container"
        android:id="@+id/parent">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true" />
    </FrameLayout>
    <FrameLayout
        android:layout_width="@dimen/rom_gamepad_width_landscape"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/rom_gamepad_spacing_horizontal_landscape"
        android:layout_marginVertical="@dimen/rom_gamepad_spacing_vertical_landscape"
        android:id="@+id/left_container" />
    <FrameLayout
        android:layout_width="@dimen/rom_gamepad_width_landscape"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/rom_gamepad_spacing_horizontal_landscape"
        android:layout_marginVertical="@dimen/rom_gamepad_spacing_vertical_landscape"
        android:id="@+id/right_container" />
</RelativeLayout>