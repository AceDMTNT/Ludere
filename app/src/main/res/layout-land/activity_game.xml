<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:id="@+id/parent" />
    <FrameLayout
        android:layout_width="@dimen/rom_gamepad_width_landscape"
        android:layout_height="@dimen/rom_gamepad_height_landscape"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="@bool/rom_gamepad_align_center_landscape"
        android:layout_alignParentBottom="@bool/rom_gamepad_align_bottom_landscape"
        android:layout_marginStart="@dimen/rom_gamepad_spacing_horizontal_landscape"
        android:layout_marginVertical="@dimen/rom_gamepad_spacing_vertical_landscape"
        android:id="@+id/left_container" />
    <FrameLayout
        android:layout_width="@dimen/rom_gamepad_width_landscape"
        android:layout_height="@dimen/rom_gamepad_height_landscape"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="@bool/rom_gamepad_align_center_landscape"
        android:layout_alignParentBottom="@bool/rom_gamepad_align_bottom_landscape"
        android:layout_marginEnd="@dimen/rom_gamepad_spacing_horizontal_landscape"
        android:layout_marginVertical="@dimen/rom_gamepad_spacing_vertical_landscape"
        android:id="@+id/right_container" />
</RelativeLayout>