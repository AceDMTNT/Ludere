<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- A unique identifier for the app (no spaces or special characters allowed) -->
    <string name="config_id">examplerom</string>

    <!-- The pretty name for the app -->
    <string name="config_name">Example Rom</string>

    <!-- LibRetro core to fetch for this ROM (excluding _libretro_android.so) -->
    <string name="config_core">snes9x</string>

    <!-- Core variables (key=value separated by commas) -->
    <string name="config_variables"></string>

    <!-- Window background color -->
    <color name="config_window_background_color">#000000</color>

    <!-- Fullscreen -->
    <bool name="config_fullscreen">true</bool>

    <!-- Orientation modes
        0: Default
        1: Portrait only
        2: Landscape only
        3: Any orientation (including upside-down)

        NOTE: Landscape <-> Portrait can be slow,
              as it involves rebuilding the
              emulator instance!
    -->
    <integer name="config_orientation">3</integer>

    <!-- Color of the GamePad icons -->
    <color name="config_gamepad_icon_color">#000000</color>

    <!-- Color of the GamePad buttons -->
    <color name="config_gamepad_button_color">#88ffffff</color>

    <!-- Color of the GamePad buttons when pressed -->
    <color name="config_gamepad_pressed_color">#66ffffff</color>

    <!-- Should the left DPAD be replaced with an analog stick? -->
    <bool name="config_left_analog">false</bool>

    <!-- Should we vibrate on touch? -->
    <bool name="config_gamepad_haptic">true</bool>

    <!-- Fast forward speed multiplier -->
    <integer name="config_fast_forward_multiplier">2</integer>

    <!-- Load ROM directly from memory; larger games should have this disabled -->
    <bool name="config_load_bytes">true</bool>

    <!-- GamePad buttons to display -->
    <bool name="config_gamepad_a">true</bool>
    <bool name="config_gamepad_b">true</bool>
    <bool name="config_gamepad_x">false</bool>
    <bool name="config_gamepad_y">false</bool>
    <bool name="config_gamepad_start">true</bool>
    <bool name="config_gamepad_select">true</bool>
    <bool name="config_gamepad_l1">false</bool>
    <bool name="config_gamepad_r1">false</bool>
</resources>
